{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2023",
      // Unfortunately, vitest needs the DOM
      "DOM"
    ],
    "target": "ES2022",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
